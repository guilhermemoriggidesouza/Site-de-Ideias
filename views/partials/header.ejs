<div class="container my-2">
    <div class="d-flex justify-content-between">
        <div class="d-item">
            <a href="/otherIdea">
                <img src="img/logo.png" class="img-fluid">
            </a>
        </div>
        <div class="d-item d-md-block d-none">
            <div class="d-block centralizarY">
                <input type="text" class="Busca centralizarY-2 form-control-sm">
                <a href="/otherIdea">
                    <i class=" mx-3 fas fa-search centralizarY-2 cinza-claro"></i>
                </a>
                <% if(dados.user){%>
                <!-- ITEM CASO ESTEJA LOGADO -->
                <p class="mb-0 d-inline-block">Bem Vindo <%=dados.user%></p>
                <a data-toggle="dropdown">
                    <img src="img/perfil-indefinido.png" class="img-fluid">
                </a>
                <div class="dropdown-menu mt-4">
                    <a class="dropdown-item py-2" href="myIdea">Minhas Ideias</a>
                    <a class="dropdown-item py-2" href="destroySession">Sair</a>
                </div>
                <!-- ITEM CASO ESTEJA LOGADO -->
                <% }else{ %>

                <p class="mb-0 d-inline">
                    <a href="/signup">Inscreva-se</a> ou <a href="javascript:abrirModal('#modalLogin')">Fa&ccedil;a o login</a>
                </p>
                <% } %>
            </div>
        </div>
        <div class="d-item d-block d-md-none ">
            <div class="centralizarY">
                <a data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    <i class="fas fa-bars fa-2x mb-0 cinza"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="collapse d-md-none text-center mt-4" id="collapseExample">
        <div class="w-100 d-flex justify-content-center">
            <input type="text" class="Busca centralizarY-2 form-control-sm">
            <i class=" ml-3 fas fa-search centralizarY-2"></i>
        </div>

        <% if(dados.user){%>
        <!-- ITEM CASO ESTEJA LOGADO -->
        <div class="w-100 d-flex justify-content-center">
            <a data-toggle="collapse" href="#collapse-infos" aria-expanded="false" aria-controls="collapseExample">
                <img src="img/perfil-indefinido.png" class=" img-fluid">
                <div class="d-inline-block">
                    <p class="mb-0 cinza">Bem Vindo <br> <%=dados.user%></p>
                </div>
            </a>
        </div>
        <div id="collapse-infos" class="collapse d-md-none text-center mt-4">
            <ul class="list-group">
                <li class="list-group-item"><a href="" class="cinza">Minhas Ideias</a></li>
                <li class="list-group-item"><a href="" class="cinza">Meu Perfil</a></li>
                <li class="list-group-item"><a href="" class="cinza">Sair</a></li>
            </ul>
        </div>
        <!-- ITEM CASO ESTEJA LOGADO -->
        <% }else{ %>
        <p class="mb-0 d-inline">
            <a href="">Inscreva-se</a> ou <a href="">Fa&ccedil;a o login</a>
        </p>
        <% } %>
    </div>
</div>
<hr>